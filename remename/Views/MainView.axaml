<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:remename.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="remename.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <TextBlock Grid.Row="0" Text="文件夹路径：" FontWeight="Bold" Margin="0,0,0,5"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
      <TextBox Text="{Binding SelectedPath}" Width="300"/>
      <Button Content="浏览..." Command="{Binding SelectFolderCommand}"/>
    </StackPanel>
    
    <TextBlock Grid.Row="2" Text="搜索内容：" FontWeight="Bold" Margin="0,0,0,5"/>
    <TextBox Grid.Row="3" Text="{Binding SearchText}" Margin="0,0,0,10"/>
    
    <TextBlock Grid.Row="4" Text="待处理文件列表：" FontWeight="Bold" Margin="0,0,0,5"/>
    <ListBox Grid.Row="5" ItemsSource="{Binding FileList}" Height="200" Margin="0,0,0,10"/>
    
    <TextBlock Grid.Row="6" Text="替换为：" FontWeight="Bold" Margin="0,0,0,5"/>
    <TextBox Grid.Row="7" Text="{Binding ReplaceText}" Margin="0,0,0,10"/>
    
    <Button Grid.Row="8" Content="重命名文件" Command="{Binding RenameCommand}" 
            HorizontalAlignment="Left" 
            Width="120"/>
  </Grid>
</UserControl>
