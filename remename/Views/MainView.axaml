<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:remename.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="remename.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <StackPanel Spacing="10" Margin="20">
    <TextBlock Text="文件夹路径：" FontWeight="Bold" FontFamily="$Default"/>
    <StackPanel Orientation="Horizontal">
      <TextBox Text="{Binding SelectedPath}" Width="300" FontFamily="$Default"/>
      <Button Content="浏览..." Margin="5,0" FontFamily="$Default"/>
    </StackPanel>
    
    <TextBlock Text="搜索内容：" FontWeight="Bold" FontFamily="$Default"/>
    <TextBox Text="{Binding SearchText}" FontFamily="$Default"/>
    
    <TextBlock Text="替换为：" FontWeight="Bold" FontFamily="$Default"/>
    <TextBox Text="{Binding ReplaceText}" FontFamily="$Default"/>
    
    <Button Content="重命名文件" Command="{Binding RenameCommand}" 
            Margin="0,10,0,0" 
            HorizontalAlignment="Left" 
            Width="120" FontFamily="$Default"/>
  </StackPanel>
</UserControl>
